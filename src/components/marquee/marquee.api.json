    {
      "name": "numberOfReps",
      "type": "number",
      "description": "Marquee animation number of repetitions",
      "default": "infinite"
    },
    {"name": "containerStyle", "type": "ViewProps['style']", "description": "Custom container style"}
  ],
  "snippet": [
    "<Marquee",
    "  key={`${index}`$1}",
    "  label={'Hey there'$2}",
    "  direction={directionHorizontal ? MarqueeDirections.LEFT : MarqueeDirections.RIGHT$3}",
